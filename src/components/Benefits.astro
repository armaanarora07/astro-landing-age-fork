---
import { Zap, Shield, Clock } from 'lucide-astro';
---

<section id="benefits" class="py-24 bg-white dark:bg-gray-900">
  <!-- Geometric decorations -->
  <div class="absolute left-0 w-32 h-32 bg-blue-100 dark:bg-blue-900/20 rounded-full blur-3xl opacity-30 -translate-x-1/2"></div>
  <div class="absolute right-0 top-1/2 w-24 h-24 bg-blue-200 dark:bg-blue-800/20 rounded-full blur-2xl opacity-40 translate-x-1/2"></div>

  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        Why Choose Us
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Experience the benefits of our cutting-edge AI chat platform
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Fast and Efficient -->
      <div class="relative group">
        <div class="absolute inset-0.5 bg-gradient-to-r from-blue-100 to-blue-50 dark:from-blue-900/50 dark:to-blue-800/30 rounded-2xl"></div>
        <div class="relative bg-white dark:bg-gray-900 p-8 rounded-2xl border border-blue-100 dark:border-blue-800/50">
          <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/50 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <Zap className="w-6 h-6 text-blue-600 dark:text-blue-400" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Fast and Efficient</h3>
          <p class="text-gray-600 dark:text-gray-300">
            Get instant responses powered by state-of-the-art AI technology. No more waiting for answers.
          </p>
        </div>
      </div>

      <!-- Secure and Private -->
      <div class="relative group">
        <div class="absolute inset-0.5 bg-gradient-to-r from-blue-50 to-blue-100 dark:from-blue-800/30 dark:to-blue-900/50 rounded-2xl"></div>
        <div class="relative bg-white dark:bg-gray-900 p-8 rounded-2xl border border-blue-100 dark:border-blue-800/50">
          <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/50 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <Shield className="w-6 h-6 text-blue-600 dark:text-blue-400" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Secure and Private</h3>
          <p class="text-gray-600 dark:text-gray-300">
            Your conversations are protected with enterprise-grade security. Privacy is our top priority.
          </p>
        </div>
      </div>

      <!-- 24/7 Availability -->
      <div class="relative group">
        <div class="absolute inset-0.5 bg-gradient-to-r from-blue-100 to-blue-50 dark:from-blue-900/50 dark:to-blue-800/30 rounded-2xl"></div>
        <div class="relative bg-white dark:bg-gray-900 p-8 rounded-2xl border border-blue-100 dark:border-blue-800/50">
          <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/50 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <Clock className="w-6 h-6 text-blue-600 dark:text-blue-400" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">24/7 Availability</h3>
          <p class="text-gray-600 dark:text-gray-300">
            Access our AI assistant anytime, anywhere. Get reliable support and answers whenever you need them, without any downtime.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    position: relative;
    isolation: isolate;
  }

