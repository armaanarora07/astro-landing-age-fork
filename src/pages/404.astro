---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import { ArrowLeft, Home } from 'lucide-react';
import { config } from '../config';

// Set the response status code to 404
Astro.response.status = 404;

// SEO metadata
const title = `Page Not Found | ${config.app.name}`;
const description = "Sorry, the page you're looking for doesn't exist or has been moved.";
---

<Layout 
  title={title} 
  description={description}
  type="website"
>
  {config.features.navbar && <Navbar />}
  
  <main class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900 transition-colors duration-300 pt-24 pb-12 px-6">
    <div class="max-w-xl w-full text-center">
      <h1 class="text-9xl font-bold text-blue-500 dark:text-blue-400 mb-4">404</h1>
      
      <h2 class="text-3xl font-semibold text-gray-900 dark:text-white mb-4">Page Not Found</h2>
      
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-12">
        Sorry, we couldn't find the page you're looking for. It might have been moved or doesn't exist.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/" 
          class="flex items-center justify-center gap-2 px-6 py-3 rounded-full bg-white dark:bg-gray-800 text-gray-900 dark:text-white border border-gray-200 dark:border-gray-700 hover:border-blue-500 dark:hover:border-blue-400 transition-all duration-300"
        >
          <Home className="w-5 h-5" />
          Home
        </a>
        
        <button 
          onclick="window.history.back()" 
          class="flex items-center justify-center gap-2 px-6 py-3 rounded-full bg-blue-500 dark:bg-blue-600 text-white hover:bg-blue-600 dark:hover:bg-blue-700 transition-all duration-300"
        >
          <ArrowLeft className="w-5 h-5" />
          Go Back
        </button>
      </div>
      
      <div class="mt-24">
        <p class="text-sm text-gray-500 dark:text-gray-400">
          If you think this is an error, please <a href={`mailto:${config.app.adminEmail}`} class="text-blue-500 dark:text-blue-400 hover:underline">contact us</a>.
        </p>
      </div>
    </div>
  </main>
</Layout> 